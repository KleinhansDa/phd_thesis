doi = {10.1186/s12915-019-0625-9},
file = {:C$\backslash$:/Users/David Kleinhans.000/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Hunter et al. - 2019 - A role for actomyosin contractility in Notch signaling.pdf:pdf},
issn = {17417007},
journal = {BMC Biol.},
number = {1},
pages = {1--15},
title = {{A role for actomyosin contractility in Notch signaling}},
volume = {17},
